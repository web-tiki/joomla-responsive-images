<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="system" method="upgrade" version="5.0">
    <name>plg_system_responsiveimages</name>
    <element>responsiveimages</element>
    <namespace path="src">WebTiki\Plugin\System\ResponsiveImages</namespace>
    <author>web-tiki</author>
    <creationDate>January 2026</creationDate>
    <authorUrl>web-tiki.com</authorUrl>
    <copyright>(C) 2026 Daniel Molinier</copyright>
    <license>GNU General Public License version 3 or later</license>
    <authorEmail>hello@web-tiki.com</authorEmail>
    <version>0.1.17</version>
    <description>PLG_SYSTEM_RESPONSIVEIMAGES_XML_DESCRIPTION</description>
    <files>
        <filename plugin="responsiveimages">responsiveimages.php</filename>
        <folder>language</folder>
        <folder>src</folder>
        <folder>layouts</folder>        
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field 
                    name="webp" 
                    type="radio" 
                    default="1" 
                    label="WebP" 
                    filter="integer" 
                    layout="joomla.form.field.radio.switcher"
                    description="Enable WebP generation by default">
                    <option value="0">JOFF</option>
                    <option value="1">JON</option>
                </field>
                <field 
                    name="lazy" 
                    type="radio" 
                    default="1" 
                    label="Lazyload" 
                    filter="integer" 
                    layout="joomla.form.field.radio.switcher"
                    description="Enable lazyloading images by default">
                    <option value="0">JOFF</option>
                    <option value="1">JON</option>
                </field>
                <field 
                    name="widths" 
                    type="text" 
                    default="480, 800, 1200, 1600, 2000, 2560" 
                    label="Thumb widths" 
                    description="Comma-separated list of widths for thumbnails"
                    required="true"
                />
                <field 
                    name="sizes" 
                    type="text" 
                    default="100vw" 
                    label="Sizes attribute" 
                    description="Default sizes attribute for responsive images"
                    required="true"
                />
                <field name="quality" 
                    type="number" 
                    default="75" 
                    label="Image Quality" 
                    description="Quality for generated images (1-100) works only for webp and jpeg" 
                    min="10" 
                    max="100"
                    step="5"
                    hint="this is a hint"
                    required="true"
                    />
            </fieldset>
            <fieldset name="advanced">
                <field 
                    name="debug" 
                    type="radio" 
                    default="0" 
                    label="Debug mode" 
                    description="Display debug information in frontend output.This displays data on frontend and breaks layout. This should be turned off on live sites. Ensure cache is disabled to get reliable information." 
                    filter="integer" 
                    layout="joomla.form.field.radio.switcher">
                    <option value="0">JOFF</option>
                    <option value="1">JON</option>
                </field>
            </fieldset>

        </fields>
    </config>
    <languages folder="language">
        <language tag="en-GB">en-GB/plg_system_responsiveimages.ini</language>
        <language tag="en-GB">en-GB/plg_system_responsiveimages.sys.ini</language>
        <language tag="fr-FR">fr-FR/plg_system_responsiveimages.ini</language>
        <language tag="fr-FR">fr-FR/plg_system_responsiveimages.sys.ini</language>
    </languages>
    <updateservers>
        <server type="extension" priority="1" name="web-tiki Responsive Images Update Server">
            https://raw.githubusercontent.com/web-tiki/joomla-responsive-images/main/update.xml
        </server>
    </updateservers>
</extension>
