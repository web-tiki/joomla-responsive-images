<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="system" method="upgrade" version="5.0">
    <name>plg_system_responsiveimages</name>
    <element>responsiveimages</element>
    <namespace path="src">WebTiki\Plugin\System\ResponsiveImages</namespace>
    <author>web-tiki</author>
    <creationDate>January 2026</creationDate>
    <version>0.0.12</version>
    <description>PLG_SYSTEM_RESPONSIVEIMAGES_XML_DESCRIPTION</description>
    <files>
        <filename plugin="responsiveimages">responsiveimages.php</filename>
        <folder>language</folder>
        <folder>src</folder>
        <folder>layouts</folder>        
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="thumb_dir" type="text" default="thumbnails/responsive" label="Thumbnail directory" description="Where should the thumbnails be stored (relative to /images) ?" />
                <field name="webp" type="radio" default="1" label="WebP" description="Enable WebP generation by default">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="lazy" type="radio" default="1" label="Lazyload" description="Enable lazyload by default">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="widths" type="text" default="640, 1280, 1920" label="Thumb widths" description="Comma-separated list of widths for thumbnails" />
                <field name="sizes" type="text" default="100vw" label="Sizes attribute" description="Default sizes attribute for responsive images" />
                <field name="quality" type="number" default="75" label="Image Quality" description="Quality for generated images (1-100) works only for webp and jpeg" />
            </fieldset>
        </fields>
    </config>
    <languages folder="language">
        <language tag="en-GB">en-GB/plg_system_responsiveimages.ini</language>
        <language tag="en-GB">en-GB/plg_system_responsiveimages.sys.ini</language>
        <language tag="fr-FR">fr-FR/plg_system_responsiveimages.ini</language>
        <language tag="fr-FR">fr-FR/plg_system_responsiveimages.sys.ini</language>
    </languages>
    <updateservers>
        <server type="extension" priority="1" name="Responsive Images Update Server">
            https://raw.githubusercontent.com/web-tiki/joomla-responsive-images/main/update.xml
        </server>
    </updateservers>
</extension>
